{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    // * Combined commands
    {
      "label": "Git Commiter",
      "type": "shell",
      "command": "set GIT_COMMITTER_DATE=\"${input:pastDate}\" && set GIT_AUTHOR_DATE=\"${input:pastDate}\" && git var GIT_COMMITTER_IDENT && git var GIT_AUTHOR_IDENT && git add . && git commit -m \"${input:commitMessage}\" && git show --no-patch --no-notes --pretty='%cd' HEAD"
    },
    {
      "label": "git run",
      "type": "shell",
      "command": "set pushResponse=${input:pushResponse} && if \"${input:pushResponse}\"==\"yes\" (git push) else (echo Push canceled.)",
      "dependsOn": "Git Commiter",
      "problemMatcher": [],
      //   "presentation": {
      //     "reveal": "always"
      //   },
      "icon": {
        "id": "git-commit",
        "color": "terminal.ansiCyan"
      }
    }
  ],
  "inputs": [
    {
      "id": "pastDate",
      "type": "promptString",
      "description": "Enter the date you wish to commit on..."
    },
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Enter the commit message..."
    },
    {
      "id": "pushResponse",
      "type": "pickString",
      "description": "Do you want to push changes? (YES or NO)",
      "options": ["yes", "no"]
    }
  ]
}
